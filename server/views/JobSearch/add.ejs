<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>

<!-- Content for add page -->
<div class="container">
<div class="row">
   <div class="col-md-offset-3 col-md-6">
   <h1><%= title %></h1>


   <form class="form" method="post">
   <div class="form-group">
   <label for="jobtitleTextField"> Title of The Job</label>
   <input type="text" class="form-control"
   id="jobtitleTextField"
   placeholder="Enter the job title"
   name="jobtitle" required>
   </div>

<div class="form-group">
   <label for="requirementsTextField"> Requirements</label>
   <input type="text" class="form-control"
   id="requirementsTextField"
   placeholder="Enter the job's requirements"
   name="requirements" required>
   </div>

   <div class="form-group">
   <label for="SalaryTextField">Hourly Salary</label>
   <input type="text" class="form-control"
   id="publishTextField"
   placeholder=" Enter the hourly salary of the job in numerical format"
   name="hourlysalary" required>
   </div>

   <div class="form-group">
   <label for="availabilityTextField"> Availability</label>
   <textarea type="text" class="form-control"
   id="availabilityTextField"
   placeholder="Enter the availability that the job requires"
   name="availability" required></textarea>
   </div>

<br>
<button class="btn-btn-primary" type="submit">
<i class="fas fa-edit"></i> Submit
</button>

<a href="/JobSearch-list" class="btn btn-warning">
<i class="fas fa-undo"></i>Cancel</a>
</form>

   </div>
   </div>
</div>
<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs') %>
